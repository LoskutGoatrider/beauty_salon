<Window x:Class="beauty_salon.BookingsViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beauty_salon"
        mc:Ignorable="d"
        Title="Просмотр записей" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgBookings" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Client.FullName}"/>
                <DataGridTextColumn Header="Услуга" Binding="{Binding Service.Title}"/>
                <DataGridTextColumn Header="Дата и время" Binding="{Binding StartTime}"/>
                <DataGridTextColumn Header="Длительность" Binding="{Binding Service.DurationInSeconds}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>