<Window x:Class="beauty_salon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beauty_salon"
        mc:Ignorable="d"
        Title="Услуги салона красоты" Height="600" Width="900">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Панель администратора -->
        <StackPanel x:Name="contextMenu"  Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                    Visibility="{Binding IsAdminMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button x:Name="btnAddService" Content="Добавить услугу" Click="BtnAddService_Click" Width="120"/>
            <Button x:Name="btnViewBookings" Content="Просмотр записей" Click="BtnViewBookings_Click" Width="120" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Панель поиска и фильтров -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearch" Width="200" VerticalAlignment="Center" 
                     TextChanged="TxtSearch_TextChanged" Background="{StaticResource SecondaryBackgroundBrush}"/>

            <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="cmbSorting" Width="150" VerticalAlignment="Center" 
                      SelectionChanged="CmbSorting_SelectionChanged"/>

            <TextBlock Text="Фильтр по скидке:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox x:Name="cmbFilter" Width="120" VerticalAlignment="Center" 
                      SelectionChanged="CmbFilter_SelectionChanged"/>
        </StackPanel>

        <!-- Кнопка админа -->
        <Button x:Name="btnAdmin" Content="Режим администратора" Grid.Row="1" Grid.Column="1" 
                Click="BtnAdmin_Click" Background="{StaticResource AccentBrush}" Foreground="White"
                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0"/>

        <!-- Список услуг -->
        <ListView x:Name="LViewProduct" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,5,0,5"
                  SelectionChanged="LViewProduct_SelectionChanged">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Редактировать услугу" Click="BtnEditService_Click"/>
                    <MenuItem Header="Удалить услугу" Click="BtnDeleteService_Click"/>
                    <MenuItem Header="Записать клиента" Click="BtnBookService_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,5"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" 
                            Background="{Binding BackgroundColor}" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Image Width="100" Height="80" Source="{Binding MainImagePath, Converter={StaticResource ImagePathConverter}}"
                                   Stretch="UniformToFill"/>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Cost, StringFormat={}{0:C}}" 
                                               TextDecorations="Strikethrough" Foreground="Gray"
                                               Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding CostWithDiscount, StringFormat={}{0:C}}" 
                                               Margin="5,0,0,0" Foreground="Green" FontWeight="Bold"
                                               Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding Cost, StringFormat={}{0:C}}" 
                                               Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding DurationFormatted, StringFormat=Длительность: {0}}" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Discount, StringFormat=Скидка: {0:P0}}"
                                           Foreground="{StaticResource AccentBrush}" FontWeight="Bold"
                                           Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,0" 
                                           MaxHeight="40" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="txtResultAmount" FontWeight="Bold"/>
            <TextBlock Text=" из " />
            <TextBlock x:Name="txtAllAmount" FontWeight="Bold"/>
            <TextBlock Text=" записей" />
        </StackPanel>
    </Grid>
</Window>