<Window x:Class="beauty_salon.EditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beauty_salon"
        mc:Ignorable="d"
        Title="Редактирование услуги" Height="500" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ID (только для чтения при редактировании) -->
        <TextBlock Text="ID:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="txtId" Grid.Row="1" IsEnabled="False" Margin="0,0,0,10"/>

        <!-- Название -->
        <TextBlock Text="Название:" Grid.Row="2" Margin="0,0,0,5"/>
        <TextBox x:Name="txtTitle" Grid.Row="3" Margin="0,0,0,10"/>

        <!-- Стоимость -->
        <TextBlock Text="Стоимость:" Grid.Row="4" Margin="0,0,0,5"/>
        <TextBox x:Name="txtCost" Grid.Row="5" Margin="0,0,0,10"/>

        <!-- Длительность (в минутах) -->
        <TextBlock Text="Длительность (минуты):" Grid.Row="6" Margin="0,0,0,5"/>
        <TextBox x:Name="txtDuration" Grid.Row="7" Margin="0,0,0,10"/>

        <!-- Описание -->
        <TextBlock Text="Описание:" Grid.Row="8" Margin="0,0,0,5"/>
        <TextBox x:Name="txtDescription" Grid.Row="9" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

        <!-- Скидка -->
        <TextBlock Text="Скидка (0.0 - 1.0):" Grid.Row="10" Margin="0,0,0,5"/>
        <TextBox x:Name="txtDiscount" Grid.Row="11" Margin="0,0,0,10"/>

        <!-- Изображение -->
        <TextBlock Text="Изображение:" Grid.Row="12" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="13" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnSelectImage" Content="Выбрать" Click="BtnSelectImage_Click" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtImagePath" VerticalAlignment="Center"/>
        </StackPanel>
        <Image x:Name="imgPreview" Grid.Row="14" Height="100" Margin="0,0,0,10" 
               HorizontalAlignment="Left" Stretch="Uniform"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="15" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="BtnSave_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="BtnCancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
